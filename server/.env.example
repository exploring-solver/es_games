# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/science_games
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/science_games?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# For production, set to your frontend domain: https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (if needed)
MAX_FILE_SIZE=10485760

# Email Configuration (optional, for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@sciencegames.com
FROM_NAME=Science Games

# Cloud Storage (optional, for future features)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Redis (optional, for session management and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Socket.io Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Game Configuration
DEFAULT_GAME_TIME_LIMIT=300
DEFAULT_MAX_PLAYERS=4
MATCHMAKING_TIMEOUT=300000

# Logging
LOG_LEVEL=info
